<%- include('./partials/header') %>


<style>


body {
    background-color: white;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    color: darkslategray;
}


header, footer {
    background-color: darkslategray;
    color: white;
    text-align: center;
    padding: 12px;
}

h1 {
    text-align: center;
    font-size: 32px;
    margin-top: 20px;
    color: darkslategray;
}


form {
    width: 100%;
    max-width: 600px;
    margin: 20px auto;
    padding: 20px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    gap: 20px;
}

form section {
    display: flex;
    flex-direction: column;
    gap: 10px;
}

label {
    font-size: 18px;
    color: #333;
}

input[type="text"], textarea {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ccc;
    font-size: 16px;
    transition: border-color 0.3s ease;
}

input[type="text"]:focus, textarea:focus {
    border-color: #007bff;
    outline: none;
}

textarea {
    resize: none;
}


button {
    padding: 10px 20px;
    background-color: #28a745;
    color: white;
    border: none;
    border-radius: 5px;
    font-size: 18px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
}

button:hover {
    background-color: #218838;
    transform: translateY(-3px);
}


@media (max-width: 768px) {
    form {
        width: 90%;
    }
}

</style>
<h1>Form to add a new Blog</h1>

<form action="/blogs" method="post">
    <section>
        <label for="title">Title: </label>
        <input type="text" name="title" id="title">
    </section>
    <section>
        <label for="aadmi">Author: </label>
        <input type="text" name="author" id="aadmi">
    </section>
    <section>
        <label for="blog">Comment: </label>
        <br>
        <textarea name="comment" id="blog" cols="30" rows="4"></textarea>
    </section>
    
    <button type="submit">Add blog</button>
</form>


<%- include('./partials/footer') %>